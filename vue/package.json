{
  "name": "vuesp",
  "version": "3.1.0",
  "author": "bondrogeen@gmail.com",
  "description": "This is a Vue 3 web application for managing devices (e.g., IoT devices). The app interacts with devices via WebSockets, displays firmware and file system information, provides functions for uploading, deleting, and formatting files, and manages device services through a user-friendly interface.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bondrogeen/vuesp"
  },
  "homepage": "https://vuesp.ru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bondrogeen/vuesp/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "vue",
    "vuesp",
    "esp",
    "esp32",
    "esp8600",
    "webinterface",
    "arduino"
  ],
  "scripts": {
    "preview": "vite preview",
    "build": "npm run increment && npm run recovery && npm run parser && vue-tsc -b && vite build && npm run firmware",
    "lint": "vue-cli-service lint",
    "dev": "vite",
    "increment": "node ../scripts/increment.js",
    "firmware": "cd ../ && sh scripts/script.sh build",
    "parser": "node ./utils/parser.js ../src/const/struct.h  ./public",
    "recovery": "node ./utils/script.js /recovery/ ../src/pages"
  },
  "dependencies": {
    "@vueuse/core": "13.9.0",
    "pinia": "3.0.3",
    "tailwindcss": "4.1.13",
    "vue": "3.5.22",
    "vue-router": "4.5.1",
    "vuesp-components": "1.0.1",
    "vuesp-struct": "1.2.1"
  },
  "devDependencies": {
    "@types/websocket": "1.0.10",
    "@tailwindcss/vite": "^4.1.5",
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "minify": "9.1.0",
    "node-gzip": "^1.1.2",
    "prettier": "^3.5.3",
    "typescript": "~5.7.2",
    "unplugin-vue-router": "^0.12.0",
    "vite": "6.3.1",
    "vite-plugin-compression2": "^1.3.3",
    "vue-tsc": "^2.2.8"
  }
}
